<Window x:Class="AutoCommander.Views.ActionHandlers.HandHeldMeterExporterLayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCommander.Views"
        xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" ShowInTaskbar="False" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" Background="#f0f0f0"
        Title="手持仪表数据导出" Height="200" Width="400"
        Closed="Window_Closed">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Visibility="Visible" Name="TipsTextBlock" FontSize="18" Foreground="Green">正在接收数据，请稍后...</TextBlock>
        <StackPanel Name="OperateStackPanel" Orientation="Vertical" Visibility="Collapsed">
            <TextBlock>选择时间:</TextBlock>
            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                <tk:DateTimeUpDown Name="FromTimePicker"/>
                <Label>-</Label>
                <tk:DateTimeUpDown Name="ToTimePicker"/>
            </StackPanel>
            <Button Click="ExportButtonClicked" Margin="0,8,0,0">导出</Button>
            <Button Click="ClosedButtonClicked" Margin="0,8,0,0">关闭</Button>
        </StackPanel>
    </Grid>
</Window>
