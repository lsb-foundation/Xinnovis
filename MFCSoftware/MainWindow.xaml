<Window x:Class="MFCSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MFCSoftware"
        mc:Ignorable="d"
        Title="MFCSoftware" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <md:ColorZone Mode="PrimaryMid" Padding="16">
            <StackPanel Orientation="Horizontal">
                <Button Click="OpenSetSerialPortWindow">串口设置</Button>
                <Button Click="OpenSetAddressWindow">设置地址</Button>
                <Button Click="AddChannelButton_Click">添加通道</Button>
            </StackPanel>
        </md:ColorZone>

        <ScrollViewer Grid.Row="1" 
                      Style="{DynamicResource MaterialDesignScrollViewer}">
            <UniformGrid  Name="ChannelGrid" Columns="2">
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>
