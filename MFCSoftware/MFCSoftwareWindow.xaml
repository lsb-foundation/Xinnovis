<Window x:Class="MFCSoftware.MFCSoftwareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MFCSoftware"
        mc:Ignorable="d" WindowState="Maximized"
        Title="MFCSoftware">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Width="100" Height="32" Margin="4" HorizontalAlignment="Left"
                Click="AddChannelButton_Click">增加通道</Button>
        
        <ScrollViewer Grid.Row="1">
            <UniformGrid  Name="ChannelGrid" Columns="2">

            </UniformGrid>
        </ScrollViewer>
    </Grid>
</Window>
