<Window x:Class="MFCSoftware.SetSerialPortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MFCSoftware"
        mc:Ignorable="d"
        Title="串口设置" Height="200" Width="300" ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Margin="8">
            <Label>串口号</Label>
            <ComboBox Width="150" ItemsSource="{Binding PortNames, Mode=OneWay}" 
                      SelectedItem="{Binding PortName}"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="8">
            <Label>波特率</Label>
            <ComboBox Width="150" ItemsSource="{Binding BaudRates, Mode=OneWay}" SelectedItem="{Binding BaudRate}"></ComboBox>
        </StackPanel>
        <Button Margin="8" Height="28" Click="SetSerialPort">确定</Button>
    </StackPanel>
</Window>
