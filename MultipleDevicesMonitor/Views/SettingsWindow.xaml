<Window x:Class="MultipleDevicesMonitor.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultipleDevicesMonitor.Views"
        xmlns:properties="clr-namespace:MultipleDevicesMonitor.Properties"
        mc:Ignorable="d"
        Title="设置" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="4">
            <Label>Y轴标题：</Label>
            <TextBox Width="100" TextChanged="TextBox_TextChanged"
                     Text="{Binding Source={x:Static properties:Settings.Default}, Path=YAxisTitle, Mode=TwoWay}"/>
        </StackPanel>
        <TextBox Width="100"/>
    </StackPanel>
</Window>
