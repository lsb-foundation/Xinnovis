<?xml version="1.0" encoding="utf-8" ?>
<Commands>
	<!--CommandType属性为Read时表示该指令中不包含数据，为Write时表示该指令包含数据-->
	<Command Name="Cali" Description="标定" CommandType="Read" DataType="ASCII" Format="CALI_FLOW_V!"></Command>
	
	<Command Name="Debug" Description="获取信息" CommandType="Read" DataType="ASCII" Format="DEBUG!">
		<!--ShowInReturns节点用于描述在界面要展示的Debug指令回复的其他信息-->
		<ShowInReturns>
			<Add Key=""/>
			<Add Key=""/>
			<Add Key=""/>
			<Add Key=""/>
		</ShowInReturns>
	</Command>
	
	<!--下面指令中的DataLength属性用于程序读取Excel的数据量-->
	<Command Name="Cali_Volt" Description="录入电压" CommandType="Write" DataType="ASCII" Format="CALI_VOLT:{0}!" DataLength="22"></Command>
	<Command Name="Cali_K" Description="录入斜率" CommandType="Write" DataType="ASCII" Format="CALI_K:{0}!" DataLength="21"></Command>
	<Command Name="Cali_T" Description="录入标定时的温度" CommandType="Write" DataType="ASCII" Format="CALI_T:{0}!"></Command>
	
	<Command Name="Gas" Description="录入气体信息" CommandType="Write" DataType="ASCII" Format="GAS:{0};{1};{2}!">
		<Data>
			<DataItem Key="气体类型" Type="int"/>
			<DataItem Key="量程" Type="int"/>
			<DataItem Key="单位" Type="int"/>
		</Data>
	</Command>
	
	<Command Name="AV_Start" Description="开始输出1-5V电压" CommandType="Write" DataType="ASCII" Format="AV_START:{0}!">
		<Data>
			<DataItem Key="电压" Type="float"/>
		</Data>
	</Command>
	
	<Command Name="AV_Stop" Description="停止输出1-5V电压" CommandType="Read" DataType="ASCII" Format="AV_STOP!"></Command>
	
	<Command Name="Check_1-5" Description="检测实际输出的电压值" CommandType="Write" DataType="ASCII" Format="CHECK_1-5:{0}{1}{2}!">
		<Data>
			<DataItem Key="电压" Type="float"/>
			<DataItem Key="斜率" Type="float"/>
			<DataItem Key="截距" Type="float"/>
		</Data>
	</Command>
	
	<Command Name="Check_Stop" Description="停止输出实际的电压值" CommandType="Read" DataType="ASCII" Format="CHECK_STOP!"></Command>
	
	<Command Name="AV_1-5" Description="标定1-5V要写入的斜率K和截距D" CommandType="Write" DataType="ASCII" Format="AV_1-5:{0}{1}!">
		<Data>
			<DataItem Key="斜率" Type="float"/>
			<DataItem Key="截距" Type="float"/>
		</Data>
	</Command>

	<Command Name="Read_Flow" Description="读流量" CommandType="Read" DataType="Hex" Format="0x90"></Command>
</Commands>
